--[[
★scam for survival★
  ♥ survive for a year
  ♥ a year is four seasons:
     fall,winter,spring,summer
  ♥ each season lasts n days
  ♥ you have health
--]]

player={}

function player:new(
	x, -- x position : number
	y  -- y position : number
	)
	local obj={
		x=x,
		y=y,
		fm=1, -- animation frame
		hp=100
	}
	return setmetatable(
		obj,{__index=self}
		)
end

function player:draw()
	spr(self.fm,self.x,self.y)
end

function _init()
	_player=player:new(64,64)
end

function _update()
	if btn(⬆️) then
		_player.y-=1
	elseif btn(⬇️) then
		_player.y+=1
	end
	if btn(⬅️) then
		_player.x-=1
	elseif btn(➡️) then
		_player.x+=1
	end
end

function _draw()
	cls()
	_player:draw()
end
